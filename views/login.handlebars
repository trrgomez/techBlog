<div class="card w-50 mx-auto mt-5">
  <h3 class="card-header">Login</h3>
  <form id="login-form" class="card-body">
    <div class="form-group-row mb-3">
      <label class="form-label" for="username-login">Username</label>
      <input
        id="username-login"
        type="text"
        autofocus="true"
        class="form-control"
      />

    </div>

    <div class="form-group-row">
      <label class="form-label" for="password-login">Password</label>
      <input
        id="password-login"
        type="password"
        autofocus="true"
        class="form-control"
      />
    </div>

    <button type="submit" class="btn btn-primary my-3">Login!</button><br>
    <a class="login-link" href="/signup">Sign up instead</a>
  </form>
</div>

<script src="/javascript/login.js"></script>