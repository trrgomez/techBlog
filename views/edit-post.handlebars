<div class="card w-75 mx-auto mt-5">
  <h3 class="card-header">Edit Post</h3>
  <form class="card-body edit-post-form">
    <div class="form-group-row">
      <label for="post-title" class="form-label">Title</label>
      <input
        name="post-title"
        type="text"
        value="{{post.title}}"
        class="form-control"
      />
    </div>
    <div class="form-group-row my-3">
      <label class="form-label" for="content">Content</label>
      <input
        name="content"
        type="text"
        value="{{post.content}}"
        class="form-control"
      />
    </div>
    <button type="submit" class="btn btn-info">Update Post</button>
    <button type="button" class="delete-post-btn btn btn-danger">Delete Post</button>
  </form>
</div>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>