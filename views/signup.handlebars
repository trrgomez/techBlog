<div class="card w-50 mx-auto mt-5">
  <h3 class="card-header">Sign Up</h3>
  <form id="signup-form" class="card-body">
    <div class="form-group-row mb-3">
      <label for="username-signup" class="form-label">Username</label>
      <input id="username-signup" type="text" class="form-control" />
    </div>

    <div class="form-group-row">
      <label class="form-label" for="password-signup">Password</label>
      <input id="password-signup" type="password" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary my-3">Signup!</button><br>
    <a class="login-link" href="/login">Log in instead</a>
  </form>
</div>

<script src="/javascript/signup.js"></script>