{{#each posts as |post|}}
  <div class="card w-75 mx-auto mt-5">
    <div class="card-header">
      <a href="{{post.post_url}}" target="_blank">{{post.title}}</a>
    </div>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p> {{post.content}} </p>
        <footer class="blockquote-footer"><cite title="Source Title">created by
            {{post.user.username}}
            on
            {{created_at}}
            |
            <a href="/post/{{post.id}}">{{post.comments.length}}
              comment(s)</a></cite></footer>
      </blockquote>
    </div>
  </div>
{{/each}}